# .env.template
# Copy this file to .env and fill in your actual secure values.

# --- Keycloak Bootstrap Admin Credentials ---
# These are used only on the first run to create the initial admin user.
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=changeme_admin_password

# --- Traefik Configuration ---
# The hostname you will use to access Keycloak via the reverse proxy.
# Make sure to update your /etc/hosts file if using a custom local domain.
KEYCLOAK_HOSTNAME=keycloak.localhost

# --- PostgreSQL Database Configuration ---
# These credentials will be used by both the Postgres container to initialize
# the database and by the Keycloak container to connect to it.
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=changeme_db_password
